.form-page--narrow
  .form-page__form
    = form_for @user do |f|
      = f.error_messages
      .field
        = f.label :name
        = f.text_field :name
      .field
        = f.label :email
        = f.text_field :email
      .field
        = f.label :password
        = f.password_field :password

      .actions
        = f.submit class: 'btn'
        = link_to_delete 'Delete', @user, redirection: users_path, class: 'btn btn--secondary' unless @user.new_record?

