= tabs do
  = tab pluralize(master.images.count, 'Image') do
    - if C.alt_image_uploader
      .field
        = f.label :new_images
        = f.file_field :new_images, multiple: true
    .dropzone.product{ data: { product_id: @master.id }}
      %label.panel_description Drag + Drop or click here to upload all of your images here!

      %label.dz-loading-svg
        %span Uploading images!
        %div{ style: "height: 2px" }
        = image_tag "data:image/svg+xml;base64,"

    .column.column--2
      #images_container
        = render 'c/admin/products/masters/form_tabs/uploaded_images', f: f
