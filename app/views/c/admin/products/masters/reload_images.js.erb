$('.sortable_table tbody').sortable({
    axis:'y',
    handle: '.sort_handle',
    tolerance: 'pointer',
    containment: 'parent',
    revert: 50,
    update: function(){
      $.ajax({
        url: $(this).attr('index_data-sort'),
        method: 'POST',
        dataType: 'script',
        data: $(this).sortable('serialize')});
    }
});
