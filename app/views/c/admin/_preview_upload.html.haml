-# this partial renders a dropzone upload bucket and a preview image/body form
.gs
  .g-2
    .dropzone{data: {'model-type': "#{model_type}", "#{model_type}-id": "#{obj.id}"}}
      %label.panel_description
        Drag + Drop or click here to upload all of your images here!
      %label.dz-loading-svg
        %span Uploading images!
        %div{ style: "height: 2px" }
        = image_tag "data:image/svg+xml;base64,"

    #images_container.reorderable.row{data: {'model-type': "#{model_type}"}}
      = render 'dropzone_images', obj: obj, model_name: model_name

  - unless defined? no_preview
    .g-1.g-gutter
      %h4 Set Preview image
      %p Drag an image into the box
      #preview_image__wrapper
        #preview_drag__target{data: {'preview-target': 'true'}}
          = render 'preview_image', obj: obj
      #preview_body_container
        = f.label :summary
        = f.text_area :summary
